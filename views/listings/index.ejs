<% layout("layouts/boilerplate") -%>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<% if (search) { %>
  <div class="listings-grid">
    <p class="text-muted">Showing results for "<%= search %>"</p>
  </div>
<% } %>

<div id="filters-wrapper" class="position-relative">
  <div id="filters">
    <a href="/listings" class="filter"><i class="fa-solid fa-fire"></i><p>All</p></a>
    <a href="/listings?category=Trending" class="filter"><i class="fa-solid fa-fire"></i><p>Trending</p></a>
    <a href="/listings?category=Rooms" class="filter"><i class="fa-solid fa-bed"></i><p>Rooms</p></a>
    <a href="/listings?category=Iconic Cities" class="filter"><i class="fa-solid fa-mountain-city"></i><p>Iconic Cities</p></a>
    <a href="/listings?category=Mountains" class="filter"><i class="fa-solid fa-mountain"></i><p>Mountains</p></a>
    <a href="/listings?category=Castles" class="filter"><i class="fa-brands fa-fort-awesome"></i><p>Castles</p></a>
    <a href="/listings?category=Pools" class="filter"><i class="fa-solid fa-person-swimming"></i><p>Pools</p></a>
    <a href="/listings?category=Camping" class="filter"><i class="fa-solid fa-campground"></i><p>Camping</p></a>
    <a href="/listings?category=Farms" class="filter"><i class="fa-solid fa-tractor"></i><p>Farms</p></a>
    <a href="/listings?category=Arctic" class="filter"><i class="fa-solid fa-snowflake"></i><p>Arctic</p></a>
    <a href="/listings?category=Beach" class="filter"><i class="fa-solid fa-umbrella-beach"></i><p>Beach</p></a>
    <a href="/listings?category=Pet Friendly" class="filter"><i class="fa-solid fa-paw"></i><p>Pet Friendly</p></a>
    <a href="/listings?category=Villas" class="filter"><i class="fa-solid fa-house-chimney"></i><p>Villas</p></a>

    <div class="tax-toggle">
      Display total after taxes
      <div class="form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="gstToggle">
      </div>
    </div>
  </div>
</div>

<div class="container mt-4">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 gx-4 gy-4">
    <% for (let listing of listings) { %>
      <div class="col listing-card" data-title="<%= listing.title.toLowerCase() %>" data-location="<%= listing.location.toLowerCase() %>">
        <div class="card shadow-sm">
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <% if (listing.image && listing.image.url) { %>
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image">
            <% } else { %>
              <img src="https://via.placeholder.com/300x200?text=No+Image" class="card-img-top" alt="no image">
            <% } %>
            <div class="card-body">
              <p class="card-text mb-1"><strong><%= listing.title %></strong></p>
              <p class="mb-0 price-text" data-price="<%= listing.price %>">
                ₹ <%= listing.price.toLocaleString("en-IN") %> /night
                <span class="tax-info"> &nbsp;+18% GST</span>
              </p>
            </div>
          </a>
        </div>
      </div>
    <% } %>
  </div>
</div>

<script>
  // GST Toggle
  const gstSwitch = document.getElementById("gstToggle");

  function updatePriceDisplay(showGST) {
    const priceElems = document.querySelectorAll(".price-text");
    priceElems.forEach(p => {
      const base = parseFloat(p.dataset.price);
      const taxInfo = p.querySelector(".tax-info");

      if (showGST) {
        const total = Math.round(base * 1.18);
        p.firstChild.textContent = `₹ ${total.toLocaleString("en-IN")} /night `;
        taxInfo.style.display = "inline";
      } else {
        p.firstChild.textContent = `₹ ${base.toLocaleString("en-IN")} /night `;
        taxInfo.style.display = "none";
      }
    });
  }

  document.addEventListener("DOMContentLoaded", () => {
    const isChecked = localStorage.getItem("gstSwitch") === "true";
    gstSwitch.checked = isChecked;
    updatePriceDisplay(isChecked);
  });

  gstSwitch.addEventListener("change", () => {
    const checked = gstSwitch.checked;
    localStorage.setItem("gstSwitch", checked);
    updatePriceDisplay(checked);
  });

  // Highlight Active Filter
  const urlParams = new URLSearchParams(window.location.search);
  const activeCategory = urlParams.get("category");
  if (activeCategory) {
    document.querySelectorAll("#filters a.filter").forEach(f => {
      if (f.textContent.trim() === activeCategory) {
        f.classList.add("active-filter");
      }
    });
  }
</script>

<style>
  #filters {
    display: flex;
    overflow-x: auto;
    gap: 1rem;
    padding: 0.8rem 1rem;
    border-bottom: 1px solid #ddd;
  }
  .filter {
    text-align: center;
    text-decoration: none;
    color: #555;
    font-size: 0.85rem;
  }
  .filter i {
    font-size: 1.2rem;
    display: block;
    margin-bottom: 0.2rem;
  }
  .filter:hover {
    color: #ff385c;
  }
  .active-filter {
    color: #ff385c !important;
    border-bottom: 2px solid #ff385c;
  }
  .tax-toggle {
    margin-left: auto;
    display: flex;
    align-items: center;
    font-size: 0.9rem;
    gap: 0.4rem;
    white-space: nowrap;
  }
</style>