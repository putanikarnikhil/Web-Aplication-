<nav class="navbar navbar-expand-lg navbar-dark bg-black shadow-sm py-3 sticky-top" style="z-index: 1030; position: relative;">
  <div class="container-fluid position-relative">

    <!-- Brand -->
    <a class="navbar-brand fw-bold text-danger d-flex align-items-center gap-2" href="/listings">
      <i class="fas fa-compass"></i> Explore
    </a>

    <!-- Toggler for mobile -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Centered Search Bar -->
    <div class="position-absolute start-50 translate-middle-x" style="width: 500px;">
      <form class="d-flex" id="search-form" action="/listings" method="GET">
        <input
          id="searchInput"
          class="form-control me-2"
          type="search"
          name="search"
          placeholder="Search listings"
          aria-label="Search"
          value="<%= typeof search !== 'undefined' ? search : '' %>"
        />
        <button class="btn btn-outline-success" type="submit">
          <i class="fas fa-search"></i>
        </button>
      </form>
    </div>

    <!-- Right side content -->
    <div class="collapse navbar-collapse" id="navbarContent">
      <div class="d-flex flex-column flex-lg-row align-items-lg-center ms-lg-auto gap-3 mt-3 mt-lg-0">

        <a href="/listings/new" style="color: gold;" class="text-decoration-none fw-semibold">WanderLust creations</a>

        <% if (currUser) { %>
          <a href="/bookings/mine" class="text-decoration-none text-warning fw-semibold">My Bookings</a>
          <span style="color: gold;" class="fw-semibold">Hi, <%= currUser.username %></span>
          <a href="/logout" class="text-danger text-decoration-none fw-semibold">Logout</a>
        <% } else { %>
          <a href="/signup" style="color: gold;" class="text-decoration-none fw-semibold">Sign up</a>
          <a href="/login" style="color: gold;" class="text-decoration-none fw-semibold">Log in</a>
        <% } %>

      </div>
    </div>
  </div>
</nav>

<!-- JS to prevent empty search -->
<script>
  const searchForm = document.getElementById("search-form");
  const searchInput = document.getElementById("searchInput");

  searchForm.addEventListener("submit", function (e) {
    const query = searchInput.value.trim();
    if (!query) {
      e.preventDefault(); // prevent empty searches
    }
  });
</script>
